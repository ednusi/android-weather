<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ednusi.aweather.ZIP_EnterActivity"
    tools:showIn="@layout/activity_zip__enter"
    android:background="#2546d8"
    android:weightSum="1">



    <EditText
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/zipEnterText"
        android:layout_marginTop="77dp"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:enabled="true"
        android:textColor="#FFFFFF"
        android:textIsSelectable="true"
        android:visibility="visible"
        android:inputType="text" />

    <Button
        android:layout_width="20%dp"
        android:layout_height="10%dp"
        android:id="@+id/zipEnterButton" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hello! Please enter your zip code:"
        android:id="@+id/zipEnterLabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        />

</LinearLayout>
